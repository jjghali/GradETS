<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:background="@android:color/transparent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="75sp"
        android:background="@color/common_signin_btn_default_background"
        android:layout_marginTop="10sp"
        android:layout_marginLeft="5sp"
        android:layout_marginRight="5sp">
        <RelativeLayout
            android:id="@+id/scheduleItemType"
            android:layout_height="match_parent"
            android:layout_width="7sp"
            android:layout_alignParentTop="true"
            android:background="@android:color/holo_blue_bright">

        </RelativeLayout>

        <TextView
            android:text="TP"
            android:gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3"
            android:layout_alignBottom="@+id/scheduleItemClassName"
            android:layout_alignParentEnd="true"
            android:paddingRight="10sp"
            android:textColor="#AAAAAA"
            android:layout_alignStart="@+id/scheduleLocation" />

        <TextView
            android:text="B-3422"
            android:gravity="right"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/scheduleLocation"
            android:textColor="#AAAAAA"
            android:paddingRight="10sp"
            android:layout_below="@+id/textView3"
            android:layout_alignParentEnd="true"
            android:paddingTop="5sp" />

        <TextView
            android:text="9:00 - 12:00"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/scheduleItemTime"
            android:textColor="#AAAAAA"
            android:layout_below="@+id/scheduleItemClassName"
            android:layout_alignStart="@+id/scheduleItemClassName"
            android:paddingTop="5sp" />

        <TextView
            android:text="ING150-01"
            android:textSize="18sp"
            android:textColor="@android:color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:id="@+id/scheduleItemClassName"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/scheduleItemType"
            android:layout_marginStart="7dp" />


    </RelativeLayout>
</RelativeLayout>