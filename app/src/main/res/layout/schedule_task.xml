<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:background="@android:color/transparent">
    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:rowCount="1"
        android:columnCount="2"
        android:background="@android:color/transparent"
        android:minWidth="240dp"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="10dp">
        <RelativeLayout
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:background="@android:color/transparent"
            android:paddingLeft="10dp"
            android:minWidth="240dp">
            <TextView
                android:id="@+id/scheduleDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4"
                android:textSize="30dp"
                android:textColor="@color/white"
                android:textAlignment="textStart"
                android:layout_gravity="center_vertical"
                android:background="@android:color/transparent" />
            <TextView
                android:id="@+id/scheduleDayText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Avril"
                android:textSize="15dp"
                android:layout_below="@id/scheduleDate"
                android:textColor="@color/white"
                android:background="@android:color/transparent" />
        </RelativeLayout>
        <android.support.v7.widget.CardView
            android:layout_height="match_parent"
            android:layout_width="280dp"
            cardview:cardElevation="4dp"
            cardview:cardCornerRadius="5dp"
            cardview:cardBackgroundColor="@android:color/transparent"
            android:layout_gravity="left"
            android:minHeight="90dp">
            <LinearLayout
                android:id="@+id/scheduleTaskContainer"
                android:layout_width="match_parent"
                android:layout_gravity="right"
                cardview:cardCornerRadius="5dp"
                android:layout_height="match_parent"
                android:background="@color/belizleHole">
                <GridLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:rowCount="2"
                    android:columnCount="1">
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp">
                        <TextView
                            android:text="LOG100-11 (Cours)"
                            android:textStyle="bold"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/scheduleTaskClassCode"
                            android:layout_marginTop="5dp"
                            android:textColor="@color/white" />
                        <TextView
                            android:text="Programmation et réseautique en génie logiciel"
                            android:layout_width="284.0dp"
                            android:layout_height="35dp"
                            android:id="@+id/scheduleTaskClassTitle"
                            android:layout_marginTop="2dp"
                            android:layout_below="@id/scheduleTaskClassCode"
                            android:textColor="@color/white" />
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:id="@+id/clockIcon" />
                        <TextView
                            android:text="9h - 12h"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/scheduleTaskClassTime"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:textColor="@color/white"
                            android:layout_toRightOf="@id/clockIcon"
                            android:layout_below="@id/scheduleTaskClassTitle" />
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:textColor="@color/white"
                            android:id="@+id/mapIcon"
                            android:layout_toRightOf="@id/scheduleTaskClassTime"
                            android:layout_below="@id/scheduleTaskClassTitle" />
                        <TextView
                            android:text="B-3416"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/scheduleTaskClassLocation"
                            android:textColor="@color/white"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:layout_toRightOf="@id/mapIcon"
                            android:layout_below="@id/scheduleTaskClassTitle" />
                    </RelativeLayout>
                </GridLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </GridLayout>
</RelativeLayout>